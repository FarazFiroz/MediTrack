<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/reportCard"
    android:clickable="true"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/reports"
            android:id="@+id/reportsImg"
            app:tint="@color/subheading_color"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_circle"
            android:padding="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Report 1"
            style="@style/heading_text"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:id="@+id/reportsTitleTxt"
            app:layout_constraintStart_toEndOf="@+id/reportsImg"
            app:layout_constraintEnd_toStartOf="@id/deleteReportImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/reportsTitleTxt"
            app:layout_constraintEnd_toStartOf="@+id/deleteReportImg"
            android:text="24-10-2025"
            style="@style/subheading_text"
            android:id="@+id/reportsDateTxt"
            app:layout_constraintTop_toBottomOf="@id/reportsTitleTxt" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            app:tint="@color/subheading_color"
            android:clickable="true"
            android:id="@+id/deleteReportImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>